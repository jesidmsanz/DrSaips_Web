{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components": [
        "src/components"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@hooks": [
        "src/hooks"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@layout": [
        "src/layout"
      ],
      "@layout/*": [
        "src/layout/*"
      ],
      "@lib": [
        "src/lib"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@models": [
        "src/models"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@pages": [
        "src/pages"
      ],
      "@store": [
        "src/store"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@server/*": [
        "server/*"
      ],
      "@db/*": [
        "server/db/*"    
      ],
      "@utils/*": [
        "utils/*"
      ]
    },
    "noEmit": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
